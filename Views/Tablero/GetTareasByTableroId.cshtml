@using tl2_tp10_2023_TcassasT.Models
@using tl2_tp10_2023_TcassasT.ViewModels
@model GetTareasByTableroIdViewModel

<div style="display: flex; justify-content: space-between; align-items: center;">
  <h1>Lista de tareas</h1>
  <button type="button" class="btn btn-primary">
    <a asp-controller="Tablero" asp-action="CrearTarea" asp-route-idTablero=@Model.TableroId style="text-decoration: none; color: white;">Crear tarea</a>
  </button>
</div>
@if (@Model.Tareas.Count > 0) {
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Id</th>
        <th scope="col">Nombre</th>
        <th scope="col">Descripcion</th>
        <th scope="col">Color</th>
        <th scope="col">Estado</th>
        <th scope="col">Id usuario asignado</th>
        <th scope="col">Id tablero perteneciente</th>
        <th scope="col" colspan="2">Acciones</th>
      </tr>
    </thead>
    <tbody>
      @foreach(Tarea tarea in Model.Tareas) {
        <tr>
          <th scope="row">@tarea.Id</th>
          <td>@tarea.Nombre</td>
          <td>@tarea.Descripcion</td>
          <td>@tarea.Color</td>
          <td>@tarea.Estado</td>
          <td>@tarea.IdUsuarioAsignado</td>
          <td>@tarea.IdTablero</td>
          <td>
            <a asp-controller="Tablero" asp-action="ModificarTarea" asp-route-idTablero=@Model.TableroId asp-route-idTarea=@tarea.Id>Editar</a>
          </td>
          <td>
            <a asp-controller="Tablero" asp-action="EliminarTarea" asp-route-idTablero=@Model.TableroId asp-route-idTarea=@tarea.Id>Eliminar</a>
          </td>
        </tr>
      }
    </tbody>
  </table>
} else {
  <p>Este tablero no tiene tareas</p>
}
