@{
  ViewData["Title"] = "Crear un tablero nuevo";
}

@using tl2_tp10_2023_TcassasT.Models
@model Tablero

<form asp-controller="Tablero" asp-action="CrearTablero" method="post">
  <h2 class="mb-3">Crear un tablero nuevo</h2>
  <div class="mb-3">
    <label class="form-label">Nombre</label>
    <input type="text" class="form-control" asp-for="Nombre">
  </div>
  <div class="mb-3">
    <label class="form-label">Descripcion</label>
    <textarea class="form-control" asp-for="Descripcion"></textarea>
  </div>
  
  <input type="text" class="form-control" asp-for="IdUsuarioPropietario" value=@Model.IdUsuarioPropietario hidden>

  <button type="submit" class="btn btn-primary">Crear</button>
</form>