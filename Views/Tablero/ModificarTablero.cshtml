@{
  ViewData["Title"] = "Modificar tablero: " + @Model.Nombre;
}

@using tl2_tp10_2023_TcassasT.ViewModels
@model ModificarTableroViewModel

<form asp-controller="Tablero" asp-action="ModificarTablero" asp-route-id=@Model.Id method="post">
  @if (Model.TieneError) {
    <div class="alert alert-danger" role="alert">
      <strong>Hubo un error al crear un nuevo usuario</strong>
      @if (Model.ErrorMensaje != "") {
        <p class="mb-0">Error: @Model.ErrorMensaje</p>
      }
    </div>
  }

  <h2 class="mb-3">Modificar tablero: @Model.Nombre</h2> 
  <div class="mb-3">
    <label class="form-label">Nombre</label>
    <input type="text" class="form-control" asp-for="Nombre" value=@Model.Nombre>
    <span asp-validation-for="@Model.Nombre" class="text-danger"></span>
  </div>
  <div class="mb-3">
    <label class="form-label">Descripcion</label>
    <textarea class="form-control" asp-for="Descripcion">@Model.Descripcion</textarea>
    <span asp-validation-for="@Model.Descripcion" class="text-danger"></span>
  </div>
  <input type="number" class="form-control" asp-for="Id" value=@Model.Id hidden>
  <input type="number" class="form-control" asp-for="IdUsuarioPropietario" value=@Model.IdUsuarioPropietario hidden>
  <button type="submit" class="btn btn-primary">Modificar</button>
</form>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }
