@using tl2_tp10_2023_TcassasT.Models
@using tl2_tp10_2023_TcassasT.ViewModels
@model TableroMembrecias

<div style="display: flex; justify-content: space-between; align-items: center;">
  <h2>Tablero: @Model.Nombre - miembros</h2>
  <button
    id="boton-agregar-miembro"
    type="button"
    class="btn btn-light"
    data-bs-toggle="modal"
    data-bs-target="#modal-agregar-miembro"
    data-bs-tableroId=@Model.Id
  >
    <i class="bi bi-plus"></i>
    Agregar un nuevo miembro
  </button>
</div>
@if (@Model.Miembros.Count > 0) {
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Id</th>
        <th scope="col">Nombre</th>
        <th scope="col">Rol</th>
        <th scope="col" colspan="2">Acciones</th>
      </tr>
    </thead>
    <tbody>
      @foreach(Usuario usuario in Model.Miembros) {
        <tr>
          <th scope="row">@usuario.Id</th>
          <td>@usuario.NombreDeUsario</td>
          <td>@(usuario.Id.Equals(@Model.IdUsuarioPropietario) ? "Propietario" : "Miembro")</td>
          <td>
            <button
              type="button"
              class="btn btn-warning"
              data-bs-toggle="modal"
              data-bs-target="#modal-otorgar-propiedad"
              disabled=@usuario.Id.Equals(@Model.IdUsuarioPropietario)
              data-bs-usuarioId=@usuario.Id
              data-bs-usuarioNombre="@usuario.NombreDeUsario"
            >
              Transferir propiedad
            </button>
          </td>
          <td>
            <button
              type="button"
              class="btn btn-danger"
              data-bs-toggle="modal"
              data-bs-target="#modal-remover-miembro"
              data-bs-usuarioId=@usuario.Id
              data-bs-usuarioNombre="@usuario.NombreDeUsario"
            >
              Remover miembro
            </button>
          </td>
        </tr>
      }
    </tbody>
  </table>
} else {
  <p>Este tablero no tiene tareas archivadas</p>
}

