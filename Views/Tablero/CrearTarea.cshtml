@using tl2_tp10_2023_TcassasT.Models
@model Tarea

<form asp-controller="Tablero" asp-action="CrearTarea" method="post">
  <div class="mb-3">
    <label class="form-label">Nombre de tarea</label>
    <input type="text" class="form-control" asp-for="Nombre">
  </div>
  <div class="mb-3">
    <label class="form-label">Descripcion</label>
    <textarea class="form-control" asp-for="Descripcion"></textarea>
  </div>
  <div class="mb-3">
    <label class="form-label">Color</label>
    <input type="color" class="form-control" asp-for="Color">
  </div>
  <div class="mb-3">
    <label class="form-label">Estado</label>
    <input type="text" class="form-control" asp-for="Estado">
  </div>
  <div class="mb-3" hidden>
    <label class="form-label">Usuario</label>
    <input type="number" class="form-control" asp-for="IdUsuarioAsignado" value=null>
  </div>
  <div class="mb-3" hidden>
    <label class="form-label">Tablero</label>
    <input type="number" class="form-control" asp-for="IdTablero" value=@Model.IdTablero>
  </div>
  <button type="submit" class="btn btn-primary">Crear</button>
</form>